---
const brands = [
    { name: "canon", logo: "/images/brand-images/canon.jpg" },
    { name: "epson", logo: "/images/brand-images/epson.jpg" },
    { name: "mitsubishi", logo: "/images/brand-images/mitsubishi.jpg" },
    { name: "sony", logo: "/images/brand-images/sony.jpg" },
    { name: "toshiba", logo: "/images/brand-images/toshiba.jpg" },

];
---

<section class="py-16 px-2 text-center">
    <div class="flex flex-wrap gap-4 justify-center  items-center">
        {brands.map((brand) => (
                <img src={brand.logo} alt={`Logo de ${brand.name}`} class="max-w-[100px] h-auto object-contain transition-transform duration-200 ease-in-out hover:scale-110" />
        ))}
    </div>
</section>

