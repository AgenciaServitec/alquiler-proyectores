---
const items = [
    {
        image: "/images/main-image.webp",
        title:"Alquiler de proyectores",
        description:"Te brindamos el mejor servicio de alquiler para tus eventos"
    }
]

---

<section class="z-50 bg-transparent py-6 px-10 md:px-40">
    <div class="mt-2 w-auto justify-center items-center flex flex-col">
        {items.map((item)=>(
            <div class="items-center">
                <img src={item.image} alt="Imagen de proyeccion" class="w-[20rem] h-80 "/>
            </div>
                <h1
                        class="text-4xl text-white w-full md:w-[40rem] md:text-6xl text-center justify-center font-bold mt-5 px-4 md:px-0"
                >
                    {item.title}
                </h1>
                <h2
                        class="text-slate-300 mt-5 text-center text-xl md:text-2xl px-4 md:px-0"
                >
                    {item.description}
                </h2>
                <button
                        class="bg-amber-400 hover:bg-amber-500 text-xl font-semibold text-dark px-4 py-2 rounded-xl mt-5 flex items-center gap-2"
                >
                    CONTACTAR
                </button>
        ))}
    </div>
</section>