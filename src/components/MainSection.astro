---
import ContentWrapper from "./ContentWrapper.astro";
const items = [
  {
    image: "/images/main-image.webp",
    title: "Alquiler de proyectores",
    description:
      "Te brindamos el mejor servicio de alquiler para tus reuniones o eventos",
  },
];
---

<section class="w-full min-h-screen bg-transparent pt-20 px-10 md:px-40">
  <ContentWrapper>
    {
      items.map((item) => (
        <div class="w-full justify-center items-center flex flex-col lg:flex-row">
          <img
            src={item.image}
            alt="Imagen de proyeccion"
            class="w-96 md:flex-1 lg:order-2"
          />
          <div class="md:flex-1 lg:order-1 text-center lg:text-left">
            <h1 class="text-4xl text-white w-full md:w-[40rem] md:text-7xl font-bold mt-5 px-4 md:px-0">
              {item.title}
            </h1>
            <h2 class="text-slate-300 mt-6 text-md md:text-2xl md:px-0">
              {item.description}
            </h2>
            <a
              href="#contact"
              class="bg-primary hover:bg-amber-500 text-xl font-semibold text-dark px-4 py-2 rounded-xl mt-5 flex items-center gap-2"
            >
              CONTACTAR
            </a>
          </div>
        </div>
      ))
    }
  </ContentWrapper>
</section>
